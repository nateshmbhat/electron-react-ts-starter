{
  "name": "electron-react-ts-starter",
  "description": "This is a boilerplate starter for an electron project that uses react with typescript and has some fixes applied for common bugs.",
  "version": "0.1.0",
  "private": true,
  "author": "nateshmbhat",
  "homepage": "./",
  "build": {
    "appId": "com.example.myApplication",
    "productName": "My Application",
    "copyright": "Copyright Â© 2019 Natesh M Bhat",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/app.ico"
    }
  },
  "dependencies": {
    "react": "^16",
    "react-dom": "^16.8.6",
    "react-scripts": "^3",
    "typescript": "^3",
    "electron-is-dev": "^1.1.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "react-prebuild": "cross-env cp ../main/src/*.js public/",
    "electron-build": "electron-builder",
    "release": "npm run react-prebuild && npm run react-build && electron-builder --publish=always",
    "build": "npm run react-prebuild && npm run react-build && npm run electron-build",
    "start": "cross-env BROWSER=none npm run react-start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^8",
    "electron-reload": "^1.4.0",
    "electron-builder": "^22",
    "wait-on": "^4",
    "@types/jest": "^25",
    "@types/node": "^13",
    "@types/react": "^16",
    "@types/react-dom": "^16",
    "concurrently": "^5",
    "cross-env": "^7",
    "@types/electron": "^1.6.10",
    "watch": "^1.0.2"
  }
}
